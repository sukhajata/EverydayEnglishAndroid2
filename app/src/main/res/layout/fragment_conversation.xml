           android:id="@+id/conversation_textContainer"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <RelativeLayout
               android:id="@+id/conversation_speech1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
                <ImageView
                android:id="@+id/conversation_panda1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_panda"/>
               <ImageView
                   android:id="@+id/conversation_arrow1"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_toRightOf="@id/conversation_panda1"
                   android:layout_marginRight="-10dp"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/arrow_bg2"/>
               <TextView
                   android:id="@+id/conversation_text1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@id/conversation_arrow1"
                   android:layout_marginTop="10dp"
                   android:background="@drawable/rounded_corner1"
                   android:padding="10dp" />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/conversation_speech2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/conversation_giraffe1"
