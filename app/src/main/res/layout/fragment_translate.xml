<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="everyday.sukhajata.com.everydayenglish.BingoFragment">
<android.support.percent.PercentRelativeLayout
    android:id="@+id/translate_percentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/translate_topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_border"
        android:background="@color/colorPrimaryLight">
        <TextView
            android:id="@+id/translate_txtTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LabelTarget"/>
        <ImageView
            android:id="@+id/translate_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/translate_txtTarget"
            android:padding="@dimen/button_padding"
            android:src="@drawable/ic_volume_up_black_24dp" />
        <TextView
            android:id="@+id/translate_txtTranslate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/translate_speaker"
            android:layout_below="@id/translate_txtTarget"
            style="@style/LabelTarget"/>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/translate_frame1"
        app:layout_widthPercent="33%"
        android:layout_below="@id/translate_topLayout"
        android:layout_height="wrap_content"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/translate_frame2"
        app:layout_widthPercent="33%"
        android:layout_toRightOf="@id/translate_frame1"
        android:layout_below="@id/translate_topLayout"
        android:layout_height="wrap_content"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/translate_frame3"
        app:layout_widthPercent="33%"
        android:layout_toRightOf="@id/translate_frame2"
        android:layout_below="@id/translate_topLayout"
        android:layout_height="wrap_content"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/translate_frame4"
        android:layout_height="wrap_content"
        android:layout_below="@id/translate_frame1"
        app:layout_widthPercent="33%"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/translate_frame5"
        app:layout_widthPercent="33%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/translate_frame4"
        android:layout_below="@id/translate_frame2"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/translate_frame6"
        app:layout_widthPercent="33%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/translate_frame5"
        android:layout_below="@id/translate_frame3"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/translate_frame7"
        app:layout_widthPercent="33%"
        android:layout_height="wrap_content"
        android:layout_below="@id/translate_frame4"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/translate_frame8"
        app:layout_widthPercent="33%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/translate_frame7"
        android:layout_below="@id/translate_frame5"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/translate_frame9"
        app:layout_widthPercent="33%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/translate_frame8"
        android:layout_below="@id/translate_frame6"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/translate_frame10"
        app:layout_widthPercent="33%"
        android:layout_height="wrap_content"
        android:layout_below="@id/translate_frame7"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/translate_frame11"
        app:layout_widthPercent="33%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/translate_frame10"
        android:layout_below="@id/translate_frame8"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/translate_frame12"
        app:layout_widthPercent="33%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/translate_frame11"
        android:layout_below="@id/translate_frame9"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/translate_button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SelectableButton"/>
    </FrameLayout>

</android.support.percent.PercentRelativeLayout>
    <ImageView
        android:id="@+id/translate_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/translate_percentLayout"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/translate_btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/NavigationButton"
        android:layout_marginBottom="@dimen/button_border"
        android:text="@string/next"
        android:enabled="false"/>
</RelativeLayout>