<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <FrameLayout
        android:id="@+id/matchingPairsText_frame1"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:background="@color/colorBorderInactive"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/matchingPairsText_buttonText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:padding="@dimen/button_padding" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/matchingPairsText_frame2"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/matchingPairsText_frame1"
        android:background="@color/colorBorderInactive"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/matchingPairsText_buttonText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:padding="@dimen/button_padding" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/matchingPairsText_frame3"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:layout_below="@id/matchingPairsText_frame1"
        android:background="@color/colorBorderInactive"
        android:padding="@dimen/button_border"
        android:layout_marginBottom="@dimen/spacer">
        <Button
            android:id="@+id/matchingPairsText_buttonText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:padding="@dimen/button_padding" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/matchingPairsText_frame4"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:layout_below="@id/matchingPairsText_frame2"
        android:layout_toRightOf="@id/matchingPairsText_frame3"
        android:background="@color/colorBorderInactive"
        android:padding="@dimen/button_border"
        android:layout_marginBottom="@dimen/spacer">
        <Button
            android:id="@+id/matchingPairsText_buttonText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:padding="@dimen/button_padding" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/matchingPairsText_frame5"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:layout_below="@id/matchingPairsText_frame3"
        android:background="@color/colorBorderInactive"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/matchingPairsText_buttonText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLabelBackground"
            android:padding="@dimen/button_padding" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/matchingPairsText_frame6"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:layout_below="@id/matchingPairsText_frame4"
        android:layout_toRightOf="@id/matchingPairsText_frame5"
        android:background="@color/colorBorderInactive"
        android:padding="@dimen/button_border">
        <Button
            android:id="@+id/matchingPairsText_buttonText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLabelBackground"
            android:padding="@dimen/button_padding" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/matchingPairsText_frame7"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:layout_below="@id/matchingPairsText_frame5"
        android:background="@color/colorBorderInactive"
        android:padding="@dimen/button_border"
        android:layout_marginBottom="@dimen/spacer">
        <Button
            android:id="@+id/matchingPairsText_buttonText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLabelBackground"
            android:padding="@dimen/button_padding" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/matchingPairsText_frame8"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:layout_below="@id/matchingPairsText_frame6"
        android:layout_toRightOf="@id/matchingPairsText_frame7"
        android:background="@color/colorBorderInactive"
        android:padding="@dimen/button_border"
        android:layout_marginBottom="@dimen/spacer">
        <Button
            android:id="@+id/matchingPairsText_buttonText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLabelBackground"
            android:padding="@dimen/button_padding" />
    </FrameLayout>
    <ImageView
        android:id="@+id/matchingPairsText_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/matchingPairsText_frame8"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"/>
</android.support.percent.PercentRelativeLayout>
