<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
    </style>

    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:titleTextStyle">@style/MyActionBarTheme.TitleText</item>
    </style>

    <style name="MyActionBarTheme.TitleText" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorLabelBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
    </style>

    <style name="LabelTarget">
        <item name="android:background">@color/colorLabelBackground</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textSize">@dimen/text_size_target</item>
    </style>

    <style name="LabelTargetThai">
        <item name="android:background">@color/colorLabelBackground</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="SelectableButton">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorLabelBackground</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="SelectableButtonThai">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorLabelBackground</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="SelectableButtonLight">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="NavigationButton">
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorBorderCorrect</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
